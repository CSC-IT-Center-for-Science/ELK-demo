# {{ ansible_managed }}

/data/syslogs/remote/*/*.log {
    daily
    rotate 300
    compress
    delaycompress
    missingok
    notifempty
    sharedscripts
    postrotate
        /bin/kill -HUP `cat /var/run/syslogd.pid 2> /dev/null` 2> /dev/null || true
        /bin/kill -HUP `cat /var/run/syslogdplain.pid 2> /dev/null` 2> /dev/null || true
    endscript
}
